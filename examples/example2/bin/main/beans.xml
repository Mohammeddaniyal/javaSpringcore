<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Enable component scanning to automatically detect @Component classes -->
    <context:component-scan base-package="com.daniyal.springcore"/>
    <!-- Bean definitions -->
    <bean id="engine" class="com.daniyal.springcore.Engine">
        <constructor-arg value="Petrol" />
    </bean>

    <bean id="car" class="com.daniyal.springcore.Car" />

</beans>
